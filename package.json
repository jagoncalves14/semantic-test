{
  "name": "pixelmatters-gatsby-boilerplate",
  "private": true,
  "description": "A simple starter to get up and developing quickly with Gatsby and WP GraphQL.",
  "version": "1.2.0",
  "author": "Pixelmatters",
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "browserslist": [
    ">1%",
    "last 2 versions",
    "IE 11"
  ],
  "scripts": {
    "build": "yarn clean && gatsby build",
    "start": "gatsby develop -p 8100",
    "clean": "rimraf .cache public",
    "restart": "rimraf .cache public && gatsby develop -p 8100",
    "prod": "gatsby build",
    "staging": "yarn clean && gatsby build",
    "prettier:fix": "prettier --parser typescript --write \"src/**/*.ts*\"",
    "lint": "tslint 'src/**/*.{js,ts,tsx}' -e 'src/**/*.d.ts'",
    "lint:fix": "tslint 'src/**/*.{js,ts,tsx}' -e 'src/**/*.d.ts' --fix",
    "generate": "graphql-codegen --debug",
    "storybook": "NODE_ENV=production start-storybook -s public",
    "build-storybook": "NODE_ENV=production build-storybook -s public",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "release": "standard-version"
  },
  "dependencies": {
    "bootstrap-scss": "^4.4.1",
    "gatsby": "^2.20.29",
    "gatsby-image": "^2.3.4",
    "gatsby-plugin-lodash": "^3.2.1",
    "gatsby-plugin-offline": "^3.1.4",
    "gatsby-plugin-polyfill-io": "^1.1.0",
    "gatsby-plugin-purgecss": "^5.0.0",
    "gatsby-plugin-react-helmet": "^3.2.4",
    "gatsby-plugin-sass": "^2.2.1",
    "gatsby-plugin-sharp": "^2.5.6",
    "gatsby-plugin-typescript": "^2.3.3",
    "gatsby-source-filesystem": "^2.2.4",
    "gatsby-source-graphql": "^2.4.2",
    "gatsby-transformer-sharp": "^2.4.6",
    "html-react-parser": "^0.10.3",
    "lodash": "^4.17.15",
    "node-sass": "^4.13.1",
    "object-fit-images": "^3.2.4",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.0.0",
    "webpack": "^4.43.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@commitlint/cli": "^8.3.5",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "@types/body-scroll-lock": "^2.6.1",
    "@types/node": "^13.9.5",
    "@types/object-fit-images": "^3.2.0",
    "@types/qs": "^6.9.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-helmet": "^5.0.15",
    "autoprefixer": "^9.7.5",
    "babel-loader": "^8.1.0",
    "babel-preset-react-app": "^9.1.2",
    "browserslist": "^4.11.0",
    "core-js": "^3.6.4",
    "dotenv": "^8.2.0",
    "husky": "^4.2.5",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "standard-version": "^8.0.1",
    "stylelint": "^13.2.1",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-processor-html": "^1.0.0",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-loader": "^3.5.4",
    "tslint-plugin-prettier": "^2.3.0",
    "tslint-react": "^5.0.0",
    "typescript": "^3.8.3",
    "vuepress": "^1.4.1",
    "webpack-notifier": "^1.8.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
